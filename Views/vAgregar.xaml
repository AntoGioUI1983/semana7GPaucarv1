<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="semana6GPaucar.Views.vAgregar"
             Title="vAgregar" BackgroundColor="WhiteSmoke">
    <VerticalStackLayout>
        <StackLayout BackgroundColor="LightBlue" Padding="20">
            <Image Source="https://www.uisrael.edu.ec/wp-content/uploads/2023/01/logo-uisrael@2x-e1674848533171.png"
              HeightRequest="40"/>
            <Label 
             Text="Consumo de Servicio WEB (Agregar Estudiante)"
             FontSize="20"
             HorizontalTextAlignment="Center"/>
        </StackLayout>
        
        <Entry x:Name="txtProducto" Placeholder="Ingrese el producto" TextColor="Black"/>
        <Entry x:Name="txtCategoria" Placeholder="Ingrese el categoria" TextColor="Black"/>
        <Entry x:Name="txtPrecio" Placeholder="Ingrese el precio" TextColor="Black" />
        <Button x:Name="btnGuardar" Text="Guardar"  Clicked="btnGuardar_Clicked" BackgroundColor="LightSkyBlue" TextColor="Black" WidthRequest="100" Grid.Row="0" Grid.Column="1"/>




    </VerticalStackLayout>
</ContentPage>